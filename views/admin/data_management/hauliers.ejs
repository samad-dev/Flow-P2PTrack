            <script>
                $(document).ready(() => {
                    haulier();
                    select_field('role');

                })
                $('#save').click(() => {
                    update_id = $('#update_id').val();
                    if (update_id == "") {
                        const haulier_name = $('#name').val();
                        const phone = $('#phone').val();
                        const email_fields = $('#email_fields input[name="email[]"]').map(function () { return this.value; }).get();


                        $.ajax({
                            url: '/haulier',
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({
                                haulier_name: haulier_name,
                                phone: phone,
                                email_fields: email_fields
                            }),
                            success: function (response) {
                                Swal.fire(
                                    'Success!', 'Haulier Created Successfully!', 'success'
                                )
                                $('#modal').modal('hide');
                                haulier()
                            },
                            error: function (xhr, status, error) {
                                console.error(error);
                            }
                        });



                    } else {

                        const haulier_name = $('#name').val();
                        const phone = $('#phone').val();
                        const email_fields = $('#email_fields input[name="email[]"]').map(function () { return this.value; }).get();


                        $.ajax({
                            url: '/haulier/' + update_id,
                            method: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify({
                                haulier_name: haulier_name,
                                phone: phone,
                                email_fields: email_fields
                            }),
                            success: function (response) {
                                Swal.fire(
                                    'Success!', 'Haulier Updated Successfully!', 'success'
                                )
                                $('#modal').modal('hide');
                                haulier()
                            },
                            error: function (xhr, status, error) {
                                console.error(error);
                            }
                        });


                    }

                });


                function redirect(url) {
                    window.location.href = '' + url + '';
                }
                function check_redirection(t_id) {
                    if (window.location.pathname !== '/customer') {
                        window.location.href = '/customer_details';
                        $('.nav-link.active').removeClass('active');
                        $(t_id).find('a.nav-link').addClass('active');

                        $('.tab-pane.show.active').removeClass('show active');
                        var targetTabPane = $(t_id).find('a.nav-link').attr('href');
                        $(targetTabPane).addClass('show active');
                    }
                    $('.nav-link.active').removeClass('active');
                    $(t_id).find('a.nav-link').addClass('active');

                    $('.tab-pane.show.active').removeClass('show active');
                    var targetTabPane = $(t_id).find('a.nav-link').attr('href');
                    $(targetTabPane).addClass('show active');
                }
                function edit(id) {
                    $('#haulier_text').text('Update Haulier');

                    $.ajax({
                        url: "haulier/" + id,
                        type: 'GET',
                        dataType: 'json',
                        success: function (response) {
                            $('#update_id').val(response['id']);
                            $('#name').val(response['haulier_name']);
                            $('#phone').val(response['phone']);

                            let emailArray = response['emails'].split(',').map(email => email.trim());
                            let emailCounter = 1; // Counter for email fields

                            $('#email_fields').empty();

                            // Append the first email field with the add button
                            if (emailArray.length > 0) {
                                $('#email_fields').append(`
                    <div class="mb-3 col-sm-12 col-lg-6">
                        <label for="email${emailCounter}" class="form-label">Email</label>
                        <button class="btn btn-primary" type="button" id="add_email"
                            style="float: right; padding: 0.1em 0.6em 0.1em 0.6em;"><i class="ri-add-fill"></i></button>
                        <input type="email" id="email${emailCounter}" name="email[]" value="${emailArray[0]}" class="form-control">
                    </div>
                `);
                                emailCounter++;
                            }

                            // Append the rest of the email fields with remove buttons
                            for (let i = 1; i < emailArray.length; i++) {
                                $('#email_fields').append(`
                    <div class="mb-3 col-sm-12 col-lg-6" id="email_field_${emailCounter}">
                        <label for="email_${emailCounter}" class="form-label">Email</label>
                        <button class="btn btn-danger remove-email" data-id="${emailCounter}" type="button" style="float: right; padding: 0.1em 0.6em 0.1em 0.6em;">
                            <i class="ri-close-line"></i>
                        </button>
                        <input type="email" id="email_${emailCounter}" name="email[]" value="${emailArray[i]}" class="form-control">
                    </div>
                `);
                                emailCounter++;
                            }

                            // Add event listener to dynamically remove email fields
                            $('#email_fields').on('click', '.remove-email', function () {
                                const emailId = $(this).data('id');
                                $(`#email_field_${emailId}`).remove();
                            });

                            // Add event listener to add more email fields
                            $('#add_email').on('click', function () {
                                $('#email_fields').append(`
                    <div class="mb-3 col-sm-12 col-lg-6" id="email_field_${emailCounter}">
                        <label for="email_${emailCounter}" class="form-label">Email</label>
                        <button class="btn btn-danger remove-email" data-id="${emailCounter}" type="button" style="float: right; padding: 0.1em 0.6em 0.1em 0.6em;">
                            <i class="ri-close-line"></i>
                        </button>
                        <input type="email" id="email_${emailCounter}" name="email[]" class="form-control">
                    </div>
                `);
                                emailCounter++;
                            });
                        }
                    });
                }
                function keepOnlyFirstEmailField() {
        const $emailFields = $('#email_fields');
        const $firstEmailField = $emailFields.find('.mb-3').first();

        // Remove all email fields except the first one
        $emailFields.find('.mb-3').not($firstEmailField).remove();
    }

                function clear_fields(id) {
                    $('#haulier_text').text('Add Haulier');
                    $('#' + id + '').find('input, textarea, select' ).val('');
                    $('#' + id + '').find('input:checkbox, input:radio').prop('checked', false);
                    $('#email_fields').find('input').val("")
                    keepOnlyFirstEmailField()
                }
                function delete_rec(id) {
                    Swal.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#3085d6",
                        cancelButtonColor: "#d33",
                        confirmButtonText: "Yes, delete it!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                url: "haulier/" + id,
                                type: 'Delete',
                                dataType: 'json',
                                success: function (response) {
                                    haulier();
                                    Swal.fire({
                                        title: "Deleted!",
                                        text: "Your file has been deleted.",
                                        icon: "success"
                                    });
                                }
                            });

                        }
                    });

                }
                function haulier() {
                    var settings = {
                        "url": "haulier",
                        "method": "GET",
                        "timeout": 0,
                    };

                    $.ajax(settings).done(function (response) {
                        haulier_tbl.clear().draw();
                        $.each(response, function (index, data) {


                            haulier_tbl.row.add([
                                index + 1,
                                data.haulier_name,
                                data.phone,
                                data.emails,
                                '<td>' +
                                '<button class="btn btn-soft-warning" onclick="edit(\'' + data.id + '\')" data-bs-toggle="modal" data-bs-target="#modal">' +
                                '<i class="ri-pencil-fill"></i>' +
                                '</button>' +
                                '</td>',
                                '<td>' +
                                '<button class="btn btn-soft-danger" onclick="delete_rec(\'' + data.id + '\')">' +
                                '<i class="ri-delete-bin-6-fill"></i>' +
                                '</button>' +
                                '</td>'
                            ]).draw(false).node();

                            // Add double-click event to the row


                        });
                    });
                }



                haulier_tbl = $('#haulier_tbl').DataTable({

                    keys: !0,

                    searchBox: false,
                    language: {
                        paginate:
                            { previous: "<i class='ri-arrow-left-s-line'>", next: "<i class='ri-arrow-right-s-line'>" }
                    },
                    drawCallback:
                        function () { $(".dataTables_paginate > .pagination").addClass("pagination-rounded") },

                });



                function select_field(id) {
                    var settings = {
                        "url": "role",
                        "method": "GET",
                        "timeout": 0,
                    };

                    $.ajax(settings).done(function (response) {
                        console.log(response)
                        $('#' + id + '').append('<option label="Select..." value="select">Select</option>')


                        for (i = 0; i < response.length; i++) {
                            $('#' + id + '').append($('<option>', {
                                value: response[i]['id'],
                                text: response[i]['roles']
                            }));
                        }
                    })
                }



                let emailCounter = 1;  // To track number of additional email fields

                // Add email field on button click
                $('#add_email').click(function () {
                    emailCounter++;
                    $('#email_fields').append(`
                <div class="mb-3 col-sm-12 col-lg-6" id="email_field_${emailCounter}">
                    <button class="btn btn-danger remove-email" data-id="${emailCounter}" type="button" id="add_email" style="float: right; padding: 0.1em 0.6em 0.1em 0.6em;"><i class="ri-close-line"></i></button>
                    <label for="email_${emailCounter}" class="form-label">Email</label>
                    <input type="email" id="email_${emailCounter}" name="email[]" class="form-control">
                    
                </div>
            `);
                });

                $(document).on('click', '.remove-email', function () {
                    const emailId = $(this).data('id');
                    $(`#email_field_${emailId}`).remove();
                });





            </script>